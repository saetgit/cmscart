<%- include('../_layouts/adminheader'); -%>

<h1>hossein</h1>
<h2 class="page-title" >add a page</h2>
<a href="/admin/pages" class="btn btn-primary">back to all page</a>

<% if (locals.errors) { %>
    <ul>
        <% Object.values(errors).forEach(function(error){ %>
            <div class="alert alert-danger">
                <li><%= error.msg %></li>
            </div>
        <% }); %>
    </ul>
    <% } %>

<form method="POST" action="/admin/pages/add-page">
    <div class="form-group">
        <label for="">Title</label>
        input:<input type="text" name="title" value="<%= title %>" placeholder="title" class="form-control">
    </div>
    <div class="form-group">
        <label for="">slug</label>
        input:<input type="text" name="slug" value="<%= slug %>" placeholder="slug" class="form-control">
    </div>
    <div class="form-group">
        <label for="">content</label>
        <textarea name="content" cols="30" rows="10" class="form-control" placeholder="content"><%= content %></textarea>
    </div>
    <button class="btn btn-default">submit</button>
</form>
<%- include('../_layouts/adminfooter'); -%>